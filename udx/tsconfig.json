{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "noEmit": false,
        "incremental": false,
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.stories.tsx"
    ]
}